<div class="category-title">
<p>Edit Transaction</p>
</div>

<form method="POST" action="/transactions/<%=@transaction.id %>/edit">

  <label for="merchant_name">Merchant Name:</label>
  <input type="text" id = "merchant_name" name="merchant_name" value=<%= @transaction.merchant_name %>>
  
  <label for="amount">Amount</label>
  <input type = "number" name="amount" id="amount" value=<%= @transaction.amount %> />

  <label for="category_id">Transaction Category:</label>

  <select id="category_id" name="category_id">
    <% @categories.each do |category| %>
    <option value="<%= category.id %>" <%= selected="selected" if @transaction.category_id == category.id %> > <%= category.name %> </option>
    <% end %>

  </select>

  <input type="submit" value="Edit Transaction"/>

</form>

